# ClawDug — Base Mainnet
# Copy to .env and fill in values. NEVER commit .env.

# Deployer wallet — needs ~0.02 ETH on Base for gas
PRIVATE_KEY=0x

# Hot wallet for server-side score signing (separate from deployer)
SCORE_SIGNER_PK=0x
SCORE_SIGNER_ADDRESS=0x

# Treasury (use a Gnosis Safe multisig for mainnet)
TREASURY=0x

# Basescan API key (free at basescan.org — enables contract verification)
BASESCAN_API_KEY=

# Contract addresses — auto-filled by deploy.sh after first deploy
GAME_CONTRACT=0x
DUG_TOKEN=0x
REGISTRY=0x

# API server port
PORT=3847
